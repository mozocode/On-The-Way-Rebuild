{
  "rules": {
    "heroLocations": {
      "$heroId": {
        ".read": "auth != null",
        ".write": "auth != null && auth.uid == $heroId"
      }
    },
    "presence": {
      "$heroId": {
        ".read": "auth != null",
        ".write": "auth != null && auth.uid == $heroId"
      }
    },
    "jobTracking": {
      "$jobId": {
        ".read": "auth != null",
        ".write": "auth != null && (root.child('jobs').child($jobId).child('hero').child('id').val() === auth.uid || root.child('jobs').child($jobId).child('customer').child('id').val() === auth.uid)"
      }
    },
    "typing": {
      "$jobId": {
        "$userId": {
          ".read": "auth != null",
          ".write": "auth != null && auth.uid == $userId"
        }
      }
    }
  }
}
